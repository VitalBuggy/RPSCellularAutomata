{
	"configurations": [
		{
			"name": "Debug Executable",
			"preLaunchTask": "run make",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/app",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}
